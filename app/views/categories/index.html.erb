<h1>Categorias</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.description %></td>
        <td><%= link_to 'Mostrar', category, :class => "btn btn-outline-info" %></td>
        <td><%= link_to 'Editar', edit_category_path(category), :class => "btn btn-outline-dark" %></td>
        <td><%= link_to 'Apagar', category, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Categoria', new_category_path, :class =>"btn btn-outline-success" %>