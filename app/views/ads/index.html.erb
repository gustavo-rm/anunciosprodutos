<h1>Anúncios</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Viewnumber</th>
      <th scope="col">Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.title %></td>
        <td><%= ad.description %></td>
        <td><%= ad.price %></td>
        <td><%= ad.viewnumber %></td>
        <td><%= ad.quantity %></td>
        <td><%= link_to 'Mostrar', ad, :class => "btn btn-outline-info" %></td>
        <td><%= link_to 'Editar', edit_ad_path(ad), :class => "btn btn-outline-dark" %></td>
        <td><%= link_to 'Deletar', ad, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, :class => "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Anúncio', new_ad_path, :class =>"btn btn-outline-success" %>
